{
    "name": "hornbeam-db",
    "description": "Simple in-memory database for JS app",
    "scripts": {
        "build": "tsc --build tsconfig.es6.json && tsc --build tsconfig.cjs.json",
        "lint": "eslint . --ext .ts",
        "test": "vitest --run --config ./vitest.ut-config.js",
        "test:watch": "vitest --config ./vitest.ut-config.js",
        "test:coverage": "vitest run --coverage --config ./vitest.ut-config.js",
        "test:e2e": "vitest --config ./vitest.e2e-config.js"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/digital-wolf-farm/hornbeam-db.git"
    },
    "keywords": [
        "Node.js",
        "Electron",
        "JSON",
        "database",
        "NoSQL"
    ],
    "author": "digital-wolf-farm",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/digital-wolf-farm/hornbeam-db/issues"
    },
    "homepage": "https://github.com/digital-wolf-farm/hornbeam-db#readme",
    "devDependencies": {
        "@types/node": "^16.10.3",
        "@types/promise-fs": "^2.1.2",
        "@typescript-eslint/eslint-plugin": "^5.1.0",
        "@typescript-eslint/parser": "^5.1.0",
        "@vitest/coverage-istanbul": "^0.34.6",
        "eslint": "^8.0.1",
        "typescript": "^4.4.3",
        "vitest": "^0.34.6"
    }
}
